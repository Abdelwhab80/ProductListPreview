@model Product

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pd-2">
            <h2 class="text-primary">Create Product</h2>
            <hr />
        </div>
        
        <div class="mb-3">
            <label class="form-label" for="file">Upload Photos</label>
            <input type="file" name="file" class="form-control border border-secondary" id="file" />
            <span asp-validation-for="ImageaUrl" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control border border-secondary" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control border border-secondary" style="height: 150px;"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryID" class="form-label"></label>
            <select asp-for="CategoryID" asp-items="ViewBag.CategoryList" class="form-select border border-secondary">
                <option disabled selected>--Select Category--</option>
            </select>
            <span asp-validation-for="CategoryID" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control border border-secondary" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="background-color: #93c572; border-color: #93c572; border-radius: 15px; width: 100%;">
            Create
        </button>
    </div>
</form>
